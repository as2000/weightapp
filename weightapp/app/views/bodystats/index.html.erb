<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" %>
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" %>
<meta name="viewport" content="initial-scale=1">



<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Weightapp</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav" role="tablist">
				<li class="active"><%= link_to "Stats", bodystats_path %></td></li>
				<li><%= link_to "Google", "http://google.com" %></li>
			</ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

	<div class="col-xs-12">
		<div class="panel panel-default">
				<table class="table table-striped table-responsive">
	 				<thead class="thead-inverse">
						<tr>
							<th>ID</th>
							<th>Date</th>
							<th>Body Weight KG</th>
							<th>Body Water %</th>
							<th>Body Fat %</th>
							<th>Bone Weight KG</th>
							<th>Visceral Fat ?</th>
							<th>Muscle Mass KG</th>
							<th>BMI</th>
							<th>BMR Kcal</th>
						</tr>
					</thead>
					<tbody>
						<% @bodystats.each do |stat| %>
							<tr>
								<td><%= stat.id %></td>
								<td><%= time_ago_in_words(stat.date)  %></td>
								<td><%= stat.body_weight %></td>
								<td><%= stat.body_water %></td>
								<td><%= stat.body_fat %></td>
								<td><%= stat.bone_weight %></td>
								<td><%= stat.visceral_fat %></td>
								<td><%= stat.muscle_mass %></td>
								<td><%= stat.bmi %></td>
								<td><%= stat.bmr %></td>
					 			<td><%= link_to 'Destroy', bodystat_path(stat),
					              method: :delete,
					              data: { confirm: 'Are you sure?' } %></td>
							</tr>
						<% end %>
					</tbody>
				</table>

		</div>
	<div>
</div>
