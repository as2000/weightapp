<div class="col-xs-12">
		<div class="panel panel-default">
				<table class="table table-striped table-responsive">
	 				<thead class="thead-inverse">
						<tr>
							<th>ID</th>
							<th>Date</th>
							<th>Body Weight KG</th>
							<th>Body Water %</th>
							<th>Body Fat %</th>
							<th>Bone Weight KG</th>
							<th>Visceral Fat ?</th>
							<th>Muscle Mass KG</th>
							<th>BMI</th>
							<th>BMR Kcal</th>
						</tr>
					</thead>
					<tbody>
						<% @bodystats.each do |stat| %>
							<tr>
								<td><%= stat.id %></td>
								<td><%= time_ago_in_words(stat.date)  %></td>
								<td><%= stat.body_weight %></td>
								<td><%= stat.body_water %></td>
								<td><%= stat.body_fat %></td>
								<td><%= stat.bone_weight %></td>
								<td><%= stat.visceral_fat %></td>
								<td><%= stat.muscle_mass %></td>
								<td><%= stat.bmi %></td>
								<td><%= stat.bmr %></td>
					 			<td><%= link_to 'Destroy', bodystat_path(stat),
					              method: :delete,
					              data: { confirm: 'Are you sure?' } %></td>
							</tr>
						<% end %>
					</tbody>
				</table>

		</div>
	<div>
</div>


